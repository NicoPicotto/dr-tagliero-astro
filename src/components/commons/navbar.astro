---
import Container from "@/components/commons/container.astro";
import { Button } from "@/components/starwind/button";
import { Menu } from "@lucide/astro";
---

<nav class='w-full py-4 border-b'>
   <Container>
      <div class='flex items-center justify-between'>
         <div class='text-xl font-bold'>Dr. Tagliero</div>

         <!-- Desktop Links -->
         <div class='hidden md:flex items-center gap-2'>
            <a href='/'>
               <Button variant='ghost'>Inicio</Button>
            </a>
            <a href='#sobre-mi'>
               <Button variant='ghost'>Sobre Mí</Button>
            </a>
            <a href='#articulos'>
               <Button variant='ghost'>Artículos</Button>
            </a>
            <a href='#faq'>
               <Button variant='ghost'>Preguntas Frecuentes</Button>
            </a>
            <a href='#contacto'>
               <Button variant='primary'>Contacto</Button>
            </a>
         </div>

         <!-- Mobile menu with AlpineJS -->
         <div class='md:hidden' x-data='{ open: false }'>
            <button @click='open = !open' aria-label='Abrir menú'>
               <Menu class='h-6 w-6' />
            </button>

            <div
               x-show='open'
               @click.outside='open = false'
               class='absolute left-0 top-16 z-50 bg-background border border-border p-6 space-y-2 rounded shadow-lg'
            >
               <a href='/' @click='open = false'>
                  <Button variant='ghost' class='w-full justify-start'
                     >Inicio</Button
                  >
               </a>
               <a href='#sobre-mi' @click='open = false'>
                  <Button variant='ghost' class='w-full justify-start'
                     >Sobre Mí</Button
                  >
               </a>
               <a href='#articulos' @click='open = false'>
                  <Button variant='ghost' class='w-full justify-start'
                     >Artículos</Button
                  >
               </a>
               <a href='#faq' @click='open = false'>
                  <Button variant='ghost' class='w-full justify-start'
                     >Preguntas Frecuentes</Button
                  >
               </a>
               <a href='#contacto' @click='open = false'>
                  <Button variant='primary' class='w-full justify-start'
                     >Contacto</Button
                  >
               </a>
            </div>
         </div>
      </div>
   </Container>
</nav>
